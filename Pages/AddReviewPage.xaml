<ContentPage
    x:Class="MauiAppBookPJ.Pages.AddReviewPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <StackLayout Padding="20">
        <Entry x:Name="UsernameEntry" Placeholder="Ваше имя" />
        <Editor x:Name="TextEditor" Placeholder="Ваш отзыв" HeightRequest="120" />

        <Button Text="Сохранить отзыв" Clicked="OnSaveClicked" />
    </StackLayout>
</ContentPage>
