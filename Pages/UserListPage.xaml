<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppBookPJ.Pages.UserListPage"
             Title="Пользователи">

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="10">
            <Label Text="Список зарегистрированных пользователей:" FontSize="20" FontAttributes="Bold" />

            <CollectionView x:Name="usersCollection">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray" CornerRadius="10" Padding="10" Margin="5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Username}" FontAttributes="Bold" FontSize="16" />
                                <Label Text="{Binding Password}" FontSize="14" TextColor="Gray" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
